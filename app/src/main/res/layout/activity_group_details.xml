<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/blurryicecream"
    tools:context="comp4920.mytummyisgrowling.GroupDetails">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView android:id="@+id/group_details_name_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name:"
            android:textSize="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="20dp"
            />
        <TextView android:id="@+id/group_details_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="YummyTummies"
            android:textSize="20dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="4"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView android:id="@+id/group_details_id_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Id:"
                    android:textSize="16dp"
                    />
                <TextView android:id="@+id/group_details_pass_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pass:"
                    android:textSize="16dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_gravity="left"
                android:gravity="left">
                <TextView android:id="@+id/group_details_id_string"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="YummyTummies4"
                    android:textSize="16dp"
                    android:layout_marginLeft= "5dp" />

                <TextView android:id="@+id/group_details_pass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12345"
                    android:textSize="16dp"
                    android:layout_marginLeft= "5dp"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="3">
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="2"
        >
        <TextView android:id="@+id/group_details_members_list_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Who are you eating with?"
            android:textSize="20dp"
            />
        <ListView
            android:id="@+id/group_details_members_listView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </ListView>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right">
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">
            <Button android:id="@+id/group_details_use_group_button"
                android:layout_height="50dp"
                android:layout_width="100dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/groupdetailsselector"
                android:clickable="false"
                android:enabled="false"
                android:onClick="useGroup"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

