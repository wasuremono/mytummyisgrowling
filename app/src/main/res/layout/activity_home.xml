<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blurryicecream"
    tools:context="comp4920.mytummyisgrowling.Home">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" >

        <ImageView
            android:layout_marginTop="20dp"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:id="@+id/imageView2"
            android:layout_centerHorizontal="true"
            android:src="@drawable/croppedsmallerlogo"
            />
    </RelativeLayout>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/imageTwo"
            android:src="@drawable/icon_mail"
            android:layout_alignParentLeft="@+id/emailText"
            android:layout_alignTop="@id/emailText"
            />

    <AutoCompleteTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
        android:id="@+id/emailText"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/imageTwo"
            android:gravity="fill_horizontal"
            android:hint="Email"
            android:paddingTop="10dp"
            android:maxLines="1"
            android:typeface="serif"
            android:inputType="textEmailAddress"
            android:singleLine="true"
        android:textStyle="bold"
           />



        <ImageView
            android:layout_width="50dp"
            android:layout_height="100dp"
            android:id="@+id/imageView"
            android:src="@drawable/lock"
            android:layout_below="@+id/emailText"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />




        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/passwordText"
            android:layout_below="@+id/emailText"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/imageView"
            android:paddingTop="40dp"
            android:gravity="fill_horizontal"
            android:hint="Password"
            android:typeface="serif"
            android:maxLines="1"
            android:inputType="textPassword"
            android:singleLine="true"
            android:textStyle="bold"


            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/registerButton"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:text="Don't have an account? Sign Up here "
            android:gravity="right"
            android:layout_marginBottom="20dp"
            android:clickable="true"
            />


    <Button
            android:layout_width="300dp"
            android:layout_height="75dp"
        android:id="@+id/loginButton"
        android:layout_below="@+id/passwordText"
            android:layout_centerHorizontal="true"
            android:background="@drawable/login"
        android:layout_marginTop="30dp"
            />

    </RelativeLayout>
